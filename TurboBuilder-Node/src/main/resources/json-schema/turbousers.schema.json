{
    "$id": "http://example.com/root.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "title": "turbousers.json schema",
    "required": [
        "$schema",
        "storage"
    ],
    "additionalProperties": false, 
    "properties": {
        "$schema": {
            "type": "string",
            "description": "Url to the json schema definition to validate this file",
            "enum": ["https://raw.githubusercontent.com/edertone/TurboBuilder/master/TurboBuilder-Node/src/main/resources/json-schema/turbousers.schema.json"]
        },
        "storage": {
            "type": "object",
            "description": "Describes where the data related to this library is stored. Different ways of saving the users and all their related information are available",
            "required": [
                "filesystem",
                "turbodepot",
                "sqlite"
            ],
            "additionalProperties": false,
            "properties": {
                "filesystem": {
                    "type": "object",
                    "description": "Configures which turbousers data that is stored on filesystem",
                    "required": [
                        "stores",
                        "path"
                    ],
                    "additionalProperties": false,
                    "properties": {
                        "stores": {
                            "type": "array",
                            "description": "List of user data areas that will be stored on the filesystem",
                            "items": {
                                "type": "string",
                                "enum": ["tokens", "rules", "users"]
                            }
                        },
                        "path": {
                            "type": "string",
                            "description": "Path to the root of the filesystem folder where data is stored. The contents of this folder will be updated by turbousers and must not be modified"
                        }
                    }
                },
                "turbodepot": {
                    "type": "object",
                    "description": "Configures which data that is stored by the turbodepot library",
                    "required": [
                        "stores"
                    ],
                    "additionalProperties": false,
                    "properties": {
                        "stores": {
                            "type": "array",
                            "description": "List of user data areas that will be stored on turbodepot",
                            "items": {
                                "type": "string",
                                "enum": ["tokens", "rules", "users"]
                            }
                        }
                    }
                },
                "sqlite": {
                    "type": "object",
                    "description": "Configures which data that is stored on a sqlite database",
                    "required": [
                        "stores"
                    ],
                    "additionalProperties": false,
                    "properties": {
                        "stores": {
                            "type": "array",
                            "description": "List of user data areas that will be stored on a sqlite database",
                            "items": {
                                "type": "string",
                                "enum": ["tokens", "rules", "users"]
                            }
                        }
                    }
                }
            }
        }
    }
}
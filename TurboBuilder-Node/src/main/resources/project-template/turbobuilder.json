{
	"metadata": {
		"name": "write project name here",
		"description": "write some project description here"
	},
	
	"validate": {
		"runBeforeBuild": true,
		"projectStructure" : {
	        "enabled": true,
	        "forceExtrasFolder": true,
	        "forceReadmeFile": true,
	        "forceTODOFile": true,
	        "resourcesStructure": true,
	        "phpStructure": true,
	        "jsStructure": true,
	        "tsStructure": true,
	        "tsConfigFile": true,
	        "javaStructure": true,
	        "cssStructure": true,
	        "checkGitIgnore": true
	    },
	    "phpNamespaces" : {
	        "enabled": true,
	        "mandatory": true,
	        "mustContain": ["some-php-namespace-string-here-$1-$2"],
	        "excludes": ["some-filename-pattern"]
	    },
	    "copyrightHeaders": [
	    	{
	    		"enabled": false,
	    		"path": "path/to/some/CoyprightHeaderFile.txt",
	    		"appliesTo": "src",
	    		"includes": ["js", "ts", "some-filename-pattern"],
	    		"excludes": ["some-filename-pattern"]
	    	},
	    	{
	    		"enabled": false,
	    		"path": "path/to/some/CoyprightHeaderFile.txt",
	    		"appliesTo": "src",
	    		"includes": ["js", "ts", "some-filename-pattern"],
	    		"excludes": ["some-filename-pattern"]
	    	}
	    ]
    },
    
    "build": {
    
	    "keepUnpackedSrcFiles" : false,
	    "printTodoFile" : false,
	    
	    "php" : {
	    	"enabled": false,
	    	"createPhar": false
	    },
	    
	    "js" : {
	    	"enabled": false,
	    	"createMergedJs": false
	    },
	    
	    "java" : {
	    	"enabled": false,
	    	"createJar": false
	    },
	    
	    "ts" : {
	        "enabled": false,
	        "declaration": true,
	        "strict": true,
	        "sourceMap": true,
	        "targets": [
	            {"folder": "ts", "jsTarget": "ES5"},
	            {"folder": "es5", "jsTarget": "ES5", "mergedFile": "PackedJsFileName-ES5", "globalVar": "global_lib_var"},
	            {"folder": "es6", "jsTarget": "ES6", "mergedFile": "PackedJsFileName-ES6", "globalVar": "global_lib_var"}
	        ]
	    }
    },
    
    "release": {
	    "printTodoFile" : true,
	    "gitChangeLog": true,
	    "gitChangeLogCount": 5,
	    "optimizeCss": true,
	    "optimizeHtml": true,
	    "optimizeJs": true,
	    "optimizePhp": false,
	    "optimizePictures": true,
	    "generateCodeDocumentation": true
    },
    
    "test": {
	    "php": {
	        "enabled": false,
	        "coverageReport": true,
	        "coverageReportOpenAfterTests": true
	    },	    
	    "js": {
	        "enabled": false
	    },	    
	    "ts": {
	        "enabled": false,
	        "httpServerPort": "8185",
	        "targets": ["ts", "es5", "es6"],
	        "browsers": {"chrome": false, "firefox": false, "iexplore": false},
	        "testingLibrary": "qunit"
	    }
    }
}
{
	"metadata": {
		"name": "write project name here",
		"description": "write some project description here"
	},
	
	"validate": {
		"runBeforeBuild": true,
		"projectStructure" : {
	        "enabled": true,
	        "forceExtrasFolder": true,
	        "forceReadmeFile": true,
	        "forceTODOFile": true,
	        "resourcesStructure": true,
	        "phpStructure": true,
	        "jsStructure": true,
	        "tsStructure": true,
	        "tsConfigFile": true,
	        "javaStructure": true,
	        "cssStructure": true,
	        "checkGitIgnore": true
	    }
    },
    
    "build": {
    
	    "keepUnpackedSrcFiles" : false,
	    
	    "php" : {
	    	"enabled": false,
	    	"createPhar": false
	    },
	    
	    "js" : {
	    	"enabled": false,
	    	"createMergedJs": false
	    },
	    
	    "java" : {
	    	"enabled": false,
	    	"createJar": false
	    },
	    
	    "ts" : {
	        "enabled": false,
	        "compilerDeclarationFile": true,
	        "compilerStrict": true,
	        "compilerSourceMap": false,
	        "compilerTargets": [
	            {"target": "ES5", "mergedFileName": "TurboCommons-ES5", "globalVar": "org_turbocommons"},
	            {"target": "ES6", "mergedFileName": "TurboCommons-ES6", "globalVar": "org_turbocommons"}
	        ]
	    }
    },
    
    "release": {
	    "increaseSemVerPatch": true,
	    "gitChangeLog": true,
	    "gitChangeLogCount": 5,
	    "optimizeCss": true,
	    "optimizeHtml": true,
	    "optimizeJs": true,
	    "optimizePhp": false,
	    "optimizePictures": true,
	    "generateCodeDocumentation": true
    },
    
    "test": {
	    "php": {
	        "enabled": false
	    },	    
	    "js": {
	        "enabled": false
	    },	    
	    "ts": {
	        "enabled": false,
	        "httpServerPort": "8185",
	        "browsers": ["chrome", "firefox", "iexplore"],
	        "testingLibrary": "qunit"
	    }
    }
}